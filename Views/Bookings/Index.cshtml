@model IEnumerable<InternalBookingApp.DTOs.Booking.BookingDto>

@{
    ViewData["Title"] = "Bookings";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-building"></i> Bookings</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Booking
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered text-center align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th style="width:10%">Start Date</th>
                                <th style="width:10%">End Date</th>
                                <th style="width:10%">Booked By</th>
                                <th style="width:10%">Resource</th>
                                <th style="width:20%">Purpose</th>
                                <th style="width:12%">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model)
                            {
                                <tr>
                                    <td>@booking.StartTime.ToString("g")</td>
                                    <td>@booking.EndTime.ToString("g")</td>
                                    <td>@booking.BookedBy</td>
                                    <td>@booking.Resource</td>
                                    <td class="text-wrap">@booking.Purpose</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@booking.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@booking.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                        <a asp-action="Details" asp-route-id="@booking.Id"
                                            class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-book"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">No Bookings found</div>
            }
        </div>
    </div>
</div>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InternalBookingApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InternalBookingApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>

<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-gradient bg-dark text-white sidebar" style="width: 250px; min-height: 100vh;">
            <div class="p-3">
                <h4 class="text-center">Booking System</h4>
                <hr class="bg-light" />
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white @(ViewContext.RouteData.Values["action"].ToString() == "Dashboard" ? "active" : "")"
                            asp-controller="Home" asp-action="Dashboard">
                            <i class="bi bi-speedometer2 me-2 text-white"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"].ToString() == "Resources" ? "active" : "")"
                            asp-controller="Resources" asp-action="Index">
                            <i class="bi bi-building me-2 text-white"></i>Resources
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"].ToString() == "Bookings" ? "active" : "")"
                            asp-controller="Bookings" asp-action="Index">
                            <i class="bi bi-calendar-check me-2 text-white"></i>Bookings
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main content -->
        <div class="flex-grow-1 p-4">
            @RenderBody()
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
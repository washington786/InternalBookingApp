@model InternalBookingApp.DTOs.Resource.ResourceDto

@{
    ViewData["Title"] = "Delete Resource";
}

<h2>Delete Resource</h2>

<h3>Are you sure you want to delete this resource?</h3>
<div>
    <h4>Resource Details</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2"></dt>
        Available?
        </dt>
        <dd class="col-sm-10">
            @Model.IsAvailable ? "Yes" : "No"
        </dd>
        <dt class="col-sm-2"></dt>
        Capacity
        </dt>
        <dd class="col-sm-10">
            @Model.Capacity
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>